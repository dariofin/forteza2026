.logo {
  max-width: 200px;
  margin: 20px;
}

.search__input {
  padding: 6px 10px;
  border: 1px solid #ccc;
  border-right: none;
}

.search__button {
  padding: 6px 10px;
  border: 1px solid #ccc;
  background: #f2f2f2;
  cursor: pointer;
}

.nav__link {
  text-decoration: none;
  font-weight: 600;
  color: #6b2fa3;
}

/* HERO */
.hero {
  margin: 40px 0;
}

.hero__placeholder {
  height: 500px;
  max-height: 500px;
  background: #bdbdbd;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

/* CATEGORIES */
.categories {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
}

.categories__item {
  background: #444;
  color: #fff;
  padding: 20px;
  text-align: center;
  font-weight: 600;
}

/* CARDS */
.cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24px;
}

.card {
  height: 250px;
  background: #bdbdbd;
}

/* MOSAIC */
.mosaic {
  margin: 80px 0;
}

.mosaic__inner {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  grid-auto-rows: 220px;
  gap: 16px;
}

.mosaic__item {
  background: #bdbdbd;
}

.mosaic__item--large {
  grid-row: span 2;
}

/* FOOTER */
.footer {
  background: #222;
  color: #eee;
  padding: 40px 0 16px;
}

.footer a {
  color: #eee;
  text-decoration: none;
}

.footer__bottom {
  text-align: center;
  margin-top: 24px;
  font-size: 13px;
  color: #aaa;
}

/* MOBILE */
@media (max-width: 768px) {
  .hero__placeholder {
    height: 380px;
  }

  .categories,
  .cards {
    grid-template-columns: 1fr;
  }

  .mosaic__inner {
    grid-template-columns: 1fr;
  }

  .mosaic__item--large {
    grid-row: auto;
  }
}
